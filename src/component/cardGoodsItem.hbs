<div class="card m-3">
    <div class="card-body row">
        <div class="col-2">
            <img src="{{image}}">
        </div>
        <div class="col-4 mt-3">
            <b class="display">{{name}}</b>
            <div>{{description}}</div>
        </div>
        <div class="col-2 mt-5">
            {{price.title}}: {{price.value}}
        </div>
        <div class="col-2 mt-5">
            {{amount}}
        </div>
        <div class="col-2">
            {{#each buttons}}
            <div class="mt-3 mb-2">
                <button class="btn btn-{{#if isPrimary}}primary{{/if}}{{#if isDanger}}outline-danger{{/if}}">
                    {{text}}
                </button>
            </div>
            {{/each}}
        </div>
    </div>
</div>