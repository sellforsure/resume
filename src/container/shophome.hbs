<main>

    <header>
        <div class="row">
            <div class="card p-3">
                {{#with navigation}}
                <nav class="col-6">
                    <div class="nav">
                        {{#each links}}
                        <div class="nav-item mx-4">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </nav>
            </div>
            {{/with}}
        </div>
    </header>


    <section>
        {{#with newsBlock}}
        <h2 class="text-center mt-5">{{title}}</h2>
        <div class="row">
            {{#each cards}}
            <div class="col-3">
                <div class="card m-1">
                    <div class="card-body">
                        <div class="card-title">
                            {{title}}
                            {{#if isTop}}
                            <span class="badge rounded-pill text-bg-success text-uppercase">
                                Нова
                            </span>
                            {{/if}}
                            {{#if isTop}}
                            <span class="badge rounded-pill text-bg-danger text-uppercase">
                                Топ
                            </span>
                            {{/if}}
                        </div>
                        <p>
                            {{description}}
                        </p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{#with goodsBlock}}
        <div class="mt-3 mb-3">
            <div class="row">
                {{#each tabs}}
                <div class="col-2">
                    <div class="nav nav-tabs">
                        <div class="nav-item mx-4">
                            <a href="#" class="nav-link 
                                {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}">
                                {{text}}
                            </a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div class="row">
            {{#with goodsBlock}}
            {{#each cards}}
            <div class="col-4">
                <div class="card mt-3">
                    <div>
                        <img src="{{image}}" alt="title" class="card-img-top">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{title}}
                            {{#if isHot}}
                            <span class="badge rounded-pill text-bg-warning text-uppercase">
                                Hot!
                            </span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge rounded-pill text-bg-primary">
                                Нове
                            </span>
                            {{/if}}
                            <p>{{description}}</p>
                        </h5>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>
</main>