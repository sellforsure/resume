<header class="m-3">
    <div class="text-center">
        <span class="badge text-bg-primary">
            <h1 class="display-3">{{name}}</h1>
        </span>
    </div>
</header>

<div class="m-3">
    <hr>
</div>

<main class="m-3">
    <div>
        <div>
            <h2>users</h2>
        </div>
        <section>
            <div>
                <ul class="row">
                    {{#each users}}
                    <li class="col-6">
                        <strong>
                            <p>{{name}}</p>
                        </strong>
                        <p>{{id}}</p>
                        <p>{{gender}}</p>
                        <p>{{age}}</p>
                        <div>
                            <ul>
                                {{#each friends}}
                                <li>
                                    <strong>
                                        <p>{{name}}</p>
                                    </strong>
                                    <p>{{id}}</p>
                                    <p>{{gender}}</p>
                                    <p>{{age}}</p>
                                    {{#if mutual_friends}}
                                    <ul>
                                        {{#each mutual_friends}}
                                        <li>
                                            <strong>
                                                <p>{{name}}</p>
                                            </strong>
                                            <p>{{id}}</p>
                                            <p>{{gender}}</p>
                                            <p>{{age}}</p>
                                            {{#if mutual_friends}}
                                            <ul>
                                                {{#each mutual_friends}}
                                                <li>
                                                    <strong>
                                                        <p>{{name}}</p>
                                                    </strong>
                                                    <p>{{id}}</p>
                                                    <p>{{gender}}</p>
                                                    <p>{{age}}</p>
                                                </li>
                                                {{/each}}
                                            </ul>
                                            {{/if}}
                                        </li>
                                        {{/each}}
                                        <ul>
                                            {{#each groups}}
                                            <li>
                                                <strong>
                                                    <p>{{name}}</p>
                                                </strong>
                                                <p>{{id}}</p>
                                                <p>{{description}}</p>
                                                <ul>
                                                    {{#each members}}
                                                    <li>
                                                        <strong>
                                                            <p>{{name}}</p>
                                                        </strong>
                                                        <p>{{id}}</p>
                                                        <p>{{gender}}</p>
                                                        <p>{{age}}</p>
                                                    </li>
                                                    {{/each}}
                                                </ul>
                                            </li>
                                            {{/each}}
                                        </ul>
                                        {{/if}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </div>



                        <div>
                            <ul>
                                {{#each groups}}
                                <li>
                                    <strong>
                                        <p>{{name}}</p>
                                    </strong>
                                    <p>{{id}}</p>
                                    <p>{{description}}</p>
                                    <ul>
                                        {{#each members}}
                                        <li>
                                            <strong>
                                                <p>{{name}}</p>
                                            </strong>
                                            <p>{{id}}</p>
                                            <p>{{gender}}</p>
                                            <p>{{age}}</p>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </div>
</main>